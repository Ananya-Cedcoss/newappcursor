// Test Prisma schema file
// This schema points to the test database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./test.db"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Discount {
  id         String   @id @default(uuid())
  name       String
  type       String   // "percentage" or "fixed"
  value      Float
  productIds String   // JSON string array of product IDs
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
